@model Library.Models.Book.BookDetailModel
<div class="container">
    <div class="page-header clearfix detailHeading">
        <h2 class="text-muted">@Model.Title</h2>
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <div>
                <img class="detailImage" src="@Model.Image" />
            </div>
        </div>
        <div class="col-md-4">
            <p id="bookAuthor">@Model.Author</p>
            <p id="bookStatus">@Model.Status</p>
           

            @if (Model.Status == "Lost")
            {
                <p>This book has been lost. Sorry for any inconvenience</p>
            }

            @if (Model.Status == "Not Available")
            {
                <p id="bookPatron">Withdrawn By: @Model.PatronName</p>
                <p><a class="btn btn-lg btn-success" role="button" asp-controller="Book" asp-action="Return" asp-route-id="@Model.BookId">Return</a></p>

            }

            @if (Model.Status == "Available")
            {
                <p><a class="btn btn-lg btn-info" role="button" asp-controller="Book" asp-action="Withdraw" asp-route-id="@Model.BookId">Withdraw</a></p>
            }
        </div>
        <div class="col-md-4 detailInfo">
            <table>
                <tr>
                    <td class="bookLabel">ISBN: </td>
                    <td class="bookValue">@Model.ISBN </td>
                </tr>
                <tr>
                    <td class="bookLabel">Call Number: </td>
                    <td class="bookValue">@Model.DeweyClassification </td>
                </tr>
            </table>
            </div>
        </div>
    </div>
